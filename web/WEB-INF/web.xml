<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>com.clinica.controlador.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pacienteController</servlet-name>
        <servlet-class>com.clinica.controladores.PacienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CitaController</servlet-name>
        <servlet-class>com.clinica.controladores.CitaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaController</servlet-name>
        <servlet-class>com.clinica.controladores.ConsultaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/usuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pacienteController</servlet-name>
        <url-pattern>/PacienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CitaController</servlet-name>
        <url-pattern>/CitaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaController</servlet-name>
        <url-pattern>/ConsultaController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
